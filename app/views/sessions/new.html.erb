<div class="cook3_form" >
	<%if flash[:alert]%>
	<p id="notice" ><%= flash[:alert] %></p>
	<% end %>
	<%= form_tag do %>
	<fieldset>
    <legend>登陆</legend>
    <div>
    	<label for="name">姓名:</label>
    	<%= text_field_tag :name, params[:name] %>
    </div>
    <div>
    	<label for="password">密码:</label>
    	<%= password_field_tag :password, params[:password] %>
    </div>
    <div>
    	<%=submit_tag "登陆"%>
    </div>

	</fieldset>
	<%end %>
</div>
    